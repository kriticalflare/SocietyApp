<resources>

    <!-- Base application theme. -->
    <style name="Theme.Community" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Red_Violet</item>
        <item name="colorPrimaryVariant">@color/Red_Violet_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Cornflower</item>
        <item name="colorSecondaryVariant">#02B1B0</item>
        <item name="colorOnSecondary">@color/Cloud_burst</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">
            #B3FFFFFF
        </item>

        <!-- Optional, if your app is drawing behind the status bar also. -->
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/Red_Violet</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Community</item>
    </style>
</resources>